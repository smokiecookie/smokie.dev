---
import { Image as AstroImage } from "astro:assets";

export interface Props {
  src: string;
  alt: string;
  class?: string;
  width?: number;
  domain?: string;
  height?: number;
  local?: boolean;
  loading?: "lazy" | "eager";
}

const {
  src,
  alt,
  width,
  height,
  local = false,
  loading = "lazy",
  class: className = "",
  domain = "https://i.imgur.com/",
} = Astro.props;
---

<AstroImage
  src={local ? src : domain + src}
  {alt}
  {width}
  {height}
  {loading}
  inferSize={true}
  class={className}
/>
